<section>	
	<table class="listTable">
		<colgroup>
			<col width="8%">
			<col>
			<col width="10%">
			<col width="8%">
			<col width="8%">
			<col width="18%">
		</colgroup>
		<tr>
			<th>No</th>
			<th>제목</th>
			<th>작성자</th>
			<th>조회</th>
			<th>추천</th>
			<th>날짜</th>
		</tr>
		<% for(let i=0; i<data.length; i++) { %>
		<tr>
			<td><%= i %></td>
			<td class="title"><a href="/board/boardContents.aws?bidx=">   <!-- ${bv.bidx} -->
				<!-- <c:forEach var="i" begin="1" end="${bv.level_}" step="1">
